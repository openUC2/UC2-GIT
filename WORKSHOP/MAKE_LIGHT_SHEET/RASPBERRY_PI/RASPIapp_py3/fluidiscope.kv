# CUSTOM WIDGETS
<FluidLineVert@Widget>:
    size_hint_x: 0.01
    canvas.before:
        Color:
            rgba: 0.5,0.5,1,1
        Rectangle:
            pos: self.pos
            size: self.size

<FluidLineVert2@Widget>:
