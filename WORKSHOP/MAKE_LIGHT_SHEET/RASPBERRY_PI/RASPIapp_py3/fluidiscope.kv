        Rectangle:
            pos: self.pos
            size: self.size

# add value to identify active object easily
<FluidToggleGroup@GridLayout>:
    bwidth: 2
    current_active: 2
    bcolor: 0,0,0,1
    canvas.before:
        Color:
            rgba: self.bcolor
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<FluidLabel@Label>:
